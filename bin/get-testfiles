#!/bin/bash -eux
zero=$(readlink -f "$0")
appdir="${zero%/bin/*}"
default_testfile_url_list="${appdir}/download-urls.txt"
default_testfile_dir="${appdir}/testfiles"
main() {
    local testfile_url_list="${1:-${default_testfile_url_list}}"\
	  testfile_dir="${2:-${default_testfile_dir}}"
    wget --timestamping --input-file "${testfile_url_list}" --directory-prefix "${testfile_dir}/roots/"
    "${appdir}/bin/product_download_urls" "${testfile_dir}"/roots/*
}
main "$@"
